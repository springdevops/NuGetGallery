@model SubmitPackageRequest
@{
    ViewBag.Title = "Upload Package";
    ViewBag.Tab = "Upload";
}

<h1 class="page-heading">Upload Your Package</h1>

<pre>

    #Register the Spring Repository in you machine
    Register-PSRepository -Name Spring -SourceLocation http://br-srvvmrep-04:8585 -InstallationPolicy Trusted

    #Update Manifest With ModuleVersion From Build
    Update-ModuleManifest -Path .\HelloWorld.psd1  -ModuleVersion 1.0.1

    #Publish the module to Spring Repositorry
    Publish-Module -Path .\HelloWorld -NuGetApiKey YOUR_API_KEY  -Repository Spring

</pre>
